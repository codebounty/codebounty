{
    "name": "Code Bounty",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "A simple bounty system",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "page_action": {
        "default_icon": {
            "19": "icon16.png",
            "38": "icon48.png"
        },
        "default_title": "CodeBounty"
    },
    "permissions": [
        "tabs",
        "http://*.codebounty.co/*",
        "https://localhost/meteor/public/github.js"
    ],
    "content_scripts": [
        {
            "matches": ["https://github.com/*/*/issues/*"],
            /*"css":     ["github.css"],*/
            "js":      ["jquery-1.9.1.min.js", "chromeContent.js"],
            "run_at":  "document_end"
        }
    ],
    "background": { "scripts": ["chrome.js"] },
    "homepage_url": "http://codebounty.co",
    "options_page": "options.html",
    "web_accessible_resources": []
}