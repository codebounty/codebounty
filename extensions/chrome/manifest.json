{
    "name": "Code Bounty",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "A simple bounty system",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "page_action": {
        "default_icon": {
            "19": "icon16.png",
            "38": "icon48.png"
        },
        "default_title": "CodeBounty"
    },
    "permissions": [
        "tabs",
        "contentSettings",
        "https://github.com/*/*/issues/*",
        "http://*.codebounty.co/*",
        "https://localhost/meteor/public/github.js",
        "https://localhost/meteor/public/codebounty.css"
    ],
    "background": { "scripts": ["chrome.js"] },
    "homepage_url": "http://codebounty.co",
    "options_page": "options.html",
    "web_accessible_resources": []
}